<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#fff"


        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@color/colorPrimaryDark"

            />


        <de.hdodenhof.circleimageview.CircleImageView
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:id="@+id/profile_image_dialog_"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_centerHorizontal="true"
            android:src="@drawable/round_edit_text"
            android:layout_marginTop="30dp"
            app:civ_border_width="10dp"
            app:civ_border_color="#FFFF"/>

        <ImageButton
            android:layout_width="55dp"
            android:layout_height="50dp"
            android:background="@drawable/ic_camera_alt_black_24dp"
            android:layout_marginTop="120dp"
            android:layout_marginStart="220dp"
            android:id="@+id/takee_picture"
            />


        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="320dp"
            android:layout_below="@id/profile_image_dialog_"
            android:id="@+id/scrollid">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginStart="50dp"
                android:layout_below="@id/profile_image"
                android:id="@+id/biglayout"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_tag_faces_black_24dp"
                        />



                    <EditText

                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:hint="@string/full_name"
                        android:layout_marginStart="10dp"
                        android:maxLines="1"
                        android:inputType="text"
                        android:maxLength="15"
                        android:id="@+id/profile_name_dialog"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_date_range_black_24dp"
                        />



                    <EditText

                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:hint="@string/age"
                        android:layout_marginStart="10dp"
                        android:maxLines="1"
                        android:inputType="number"
                        android:maxLength="15"
                        android:id="@+id/et_age"

                        />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/gender"
                        />


                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:hint="@string/gender"
                        android:layout_marginStart="10dp"
                        android:inputType="text"
                        android:id="@+id/profile_gender_dialog"

                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/education"
                        />


                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:hint="@string/education"
                        android:layout_marginStart="10dp"
                        android:maxLines="1"
                        android:maxLength="15"
                        android:inputType="text"
                        android:id="@+id/profile_eduction_dialog"

                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/location"
                        />


                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:hint="@string/llocation"
                        android:layout_marginStart="10dp"
                        android:maxLines="1"
                        android:maxLength="15"
                        android:inputType="text"
                        android:id="@+id/profile_location_dialog"

                        />
                </LinearLayout>


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/lay1"
                    >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:src="@drawable/ic_info_outline_black_24dp"

                        />


                    <EditText
                        android:layout_width="200dp"
                        android:layout_height="wrap_content"
                        android:hint="@string/about_me"
                        android:layout_marginStart="10dp"
                        android:maxLines="5"
                        android:id="@+id/profile_aboutme_dialog"



                        />
                </LinearLayout>









            </LinearLayout>

        </ScrollView>


    </RelativeLayout>
</FrameLayout>